name=curl
version=8.14.1
release=1
source="https://$name.se/download/$name-$version.tar.xz"

build() {
	mkdir bin
	echo "#!/bin/sh
	/bin/true
	" > bin/perl
	chmod +x bin/perl
	export PATH=$PWD/bin:$PATH

	./configure \
		--prefix=/usr \
		--with-openssl \
		--enable-threaded-resolver \
		--with-ca-bundle=/etc/ssl/certs/ca-certificates.crt \
		--without-brotli \
		--without-libidn2 \
		--without-libpsl \
		--without-librtmp \
		--without-nghttp2 \
		--without-zstd \
		--disable-ldap \
		--disable-manual \
		--disable-ares
	make
	make install
}
